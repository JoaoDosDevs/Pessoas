@model IEnumerable<Pessoas.Models.ItenPedido>

@{
    ViewData["Title"] = "Index";
}

<h1>Itens do Pedido</h1>

<p>
    <a asp-action="Create">Adicionar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorUnitario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorTotal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produto)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValorUnitario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValorTotal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Produto.ProdutoId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ItenPedidoId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.ItenPedidoId">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.ItenPedidoId">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
