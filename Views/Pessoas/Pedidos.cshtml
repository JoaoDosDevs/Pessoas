                {
                    <label>Entregue</label>
                }
            </td>

            <td>
                @Html.DisplayFor(m => Model.Pedidos[i].Rua)
                @*@Html.DisplayFor(modelItem => item.Rua)*@
            </td>
            <td>
                @Html.DisplayFor(m => Model.Pedidos[i].Numero)
                @*@Html.DisplayFor(modelItem => item.Numero)*@
            </td>
            <td>
                @Html.DisplayFor(m => Model.Pedidos[i].Complemento)
                @*@Html.DisplayFor(modelItem => item.Complemento)*@
            </td>
            <td>
                @Html.DisplayFor(m => Model.Pedidos[i].Bairro)
