            <td>
                @Html.DisplayFor(m => Model.Pedidos[i].Estado)
                @*@Html.DisplayFor(modelItem => item.Estado)*@
            </td>
            <td>
                <a asp-controller="Pessoas" asp-action="EditarPedido" asp-route-pessoaId="@Model.Pessoa.Id"  asp-route-pedidoId="@Model.Pedidos[i].PedidoId">Editar</a> |
                <a asp-controller="Pessoas" asp-action="DetalhesPedido" asp-route-pessoaId="@Model.Pessoa.Id"  asp-route-pedidoId="@Model.Pedidos[i].PedidoId">Detalhes</a> |
                <a asp-controller="Pessoas" asp-action="DeletarPedido" asp-route-pessoaId="@Model.Pessoa.Id" asp-route-pedidoId="@Model.Pedidos[i].PedidoId">Deletar</a>
            </td>

        </tr>

        }
    </tbody>
